<UserControl x:Class="firstWPFApp.View.UserControls.PagoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:firstWPFApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="10" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="{Binding Id}" FontSize="14"></Label>
                <Label Grid.Row="1" Content="{Binding Id_Prestamo}" FontSize="14"></Label>
                <Label Grid.Row="2" Content="{Binding Monto}" FontSize="14"></Label>
                <Label Grid.Row="3" Content="{Binding Fecha}" FontSize="14"></Label>
            </Grid>
        </Border>
    </Grid>
</UserControl>
